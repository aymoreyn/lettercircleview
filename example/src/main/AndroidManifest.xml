<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bytoaster.widget.example">

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.bytoaster.example.widget.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bytoaster.example.widget.XmlBasedExample" />
        <activity
            android:name="com.bytoaster.example.widget.JavaBasedExample"  />

    </application>


    <uses-sdk android:minSdkVersion="4" />

</manifest>
